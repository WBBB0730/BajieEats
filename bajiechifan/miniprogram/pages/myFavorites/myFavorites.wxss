/* pages/myFavorites/myFavorrites.wxss */

page{
  background-color: #f5f5f5;
}

text.orange {
  color: orange;
}

view.orange {
  background-color: rgba(255, 140, 0, 0.3);
}

view.f6f6f6 {
  background-color: #f6f6f6;
}

text.darkorange {
  color: darkorange;
}

view.darkorange {
  background-color: darkorange;
}

view.flex {
  display: flex;
}

/* 顶栏 */
view#top {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  background-color: white;
  z-index: 100;
}

view#options {
  height: 75rpx;
}

/* 筛选按钮 */
view#filter-button {
  display: flex;
  position: absolute;
  left: 25rpx;
  height: 75rpx;
  line-height: 75rpx;
}

image#filter-button-icon {
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}

/* 排序按钮 */
view#sort-button {
  display: flex;
  position: absolute;
  right: 25rpx;
  height: 75rpx;
  line-height: 75rpx;
}

image#sort-button-icon {
  width: 40rpx;
  height: 40rpx;
  margin: auto 0 auto 10rpx;
}

/* 排序选项 */
view.sort-option {
  width: 700rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 25rpx;
}

/* 筛选菜单 */
view#filter {
  padding-left: 25rpx;
}

view.filter-options {
  margin-bottom: 40rpx;
}

/* 筛选选项 */
view.filter-option {
  display: inline-block;
  width: 220rpx;
  height: 75rpx;
  text-align: center;
  line-height: 75rpx;
  margin: 20rpx 20rpx 0 0;
  border-radius: 40rpx;
}

view#filter-buttons {
  position: relative;
  width: 700rpx;
  height: 90rpx;
  margin-bottom:20rpx;
}

view.filter-button {
  display: inline-block;
  position: absolute;
  width: 290rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 45rpx;
  color: white;
}

/* 取消按钮 */
view#cancel-button {
  left: 25rpx;
  background-color: #fcca00;
}

/* 确定按钮 */
view#submit-button {
  right: 25rpx;
  background-color: #ff8c00;
}

/* 卡片 */
view.card {
  position: relative;
  top: 80rpx;
  width: 710rpx;
  /* height: 330rpx; */
  background-color: white;
  border-radius: 25rpx;
  margin: 20rpx auto 0 auto;
  font-size: 29rpx;
  font-weight: 300;
  color: #333333;
}

/* 餐厅卡片 */
image.canteen-image{
  width: 230rpx;
  height: 230rpx;
  border-radius: 20rpx;
  margin: 20rpx 0 20rpx 20rpx;
  float: left;
}

view.canteen-info {
  display: flex;
  width: 420rpx;
  height: 230rpx;
  margin: 20rpx 20rpx 20rpx 0;
  float: right;
  flex-direction: column;
  justify-content: space-between;
}

text.canteen-name {
  color: black;
  font-size: 40rpx;
  font-weight: bold;
}

text.opening-time {
  color: #6c6c6c;
  font-size: 28rpx;
}

view.canteen-address {
  display: flex;
  height: 50rpx;
  margin: 20rpx;
  clear: both;
}

view.canteen-address image {
  width: 40rpx;
  height: 40rpx;
  margin: auto 0 10rpx 0;
  flex-shrink: 0;
}

view.canteen-address text {
  margin: auto 20rpx auto 0;
}

/* 窗口卡片 */
view.window-title {
  display: flex;
  margin: 20rpx;
}

text.window-name {
  margin: auto auto auto 0;
  color: black;
  font-size: 40rpx;
  font-weight: 400;
  white-space: nowrap;
}

text.window-status {
  margin: auto 0 auto auto;
  white-space: nowrap;
}

view.window-address {
  display: flex;
  height: 50rpx;
  margin: 0 20rpx 20rpx 20rpx;
}

view.window-address text{
  margin: auto 0;
}

view.window-address image {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin: auto 0 10rpx auto;
}

view.dishes {
  margin: 0 20rpx;
  display: flex;
}

view.dish {
  width: 154rpx;
  margin: 0 18rpx 20rpx 0;
}

image.window-dish-image {
  width: 154rpx;
  height: 154rpx;
  border-radius: 10rpx;
}

text.window-dish-name {
  color: black;
  font-size: 28rpx;
}

/* 菜品卡片 */
image.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin: 20rpx 0 20rpx 20rpx;
  float: left;
}

view.dish-info {
  display: flex;
  position: relative;
  width: 450rpx;
  height: 200rpx;
  margin: 20rpx 20rpx 20rpx 0;
  float: right;
  flex-direction: column;
  justify-content: space-between;
}

text.dish-name {
  color: black;
  font-size: 40rpx;
  font-weight: 400;
}

text.dish-address {
  color: #333333;
}

text.dish-price {
  position: absolute;
  right: 0;
  bottom: 0;
  color: darkorange;
  font-size: 40rpx;
  font-weight: 400;
}

text.dish-tag {
  margin-right: 10rpx;
  padding: 0 10rpx;
  background-color: #e5e5e5;
  font-size: 25rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}

/* 遮罩 */
view#mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 99;
}
