.information {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 0 30rpx;
}

.detail_avatarUrl {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  /* margin-right: 30rpx; */
}

.avatar-text {
  margin: auto 0;
}

.detail {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.icon {
  width: 20rpx;
  height: 20rpx;
  margin: auto 0 auto 10rpx;
}

.value {
  display: flex;
  color: rgb(167, 164, 164);
}

.button {
  width: 650rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 25px auto;
  text-align: center;
  background-color: rgba(255, 165, 0, 0.9);
  border-radius: 10rpx;
}

.button.ontap {
  background-color: rgba(255, 165, 0, 1);
}