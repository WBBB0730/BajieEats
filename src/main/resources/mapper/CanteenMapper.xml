<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.szu.Bajie.mapper.CanteenMapper">

    <resultMap id="BaseResultMap" type="cn.edu.szu.Bajie.entity.Canteen">
            <id property="canteenId" column="canteen_id" jdbcType="INTEGER"/>
            <result property="canteenName" column="canteen_name" jdbcType="CHAR"/>
            <result property="mainImage" column="main_image" jdbcType="CHAR"/>
            <result property="canteenAddress" column="canteen_address" jdbcType="CHAR"/>
            <result property="canteenPositionLongitude" column="canteen_position_longitude" jdbcType="DECIMAL"/>
            <result property="canteenPositionLatitude" column="canteen_position_latitude" jdbcType="DECIMAL"/>
            <result property="openingTime" column="opening_time" jdbcType="CHAR"/>
            <result property="recommendStatus" column="recommend_status" jdbcType="INTEGER"/>
            <result property="deleteStatus" column="delete_status" jdbcType="INTEGER"/>
            <result property="sort" column="sort" jdbcType="INTEGER"/>
            <result property="score" column="score" jdbcType="DECIMAL"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        canteen_id,canteen_name,main_image,
        canteen_address,canteen_position_longitude,canteen_position_latitude,
        opening_time,recommend_status,delete_status,
        sort,score,create_time,
        update_time
    </sql>
    <select id="getCanteens" resultType="cn.edu.szu.Bajie.dto.result.SimpleCanteenResultDto">
        SELECT
            *
        FROM
            (SELECT
                 canteen_id,
                 canteen_name,
                 main_image,
                 canteen_address,
                 opening_time,
                 score,
                 sort,
                 canteen_position_longitude,
                 canteen_position_latitude,
                 st_distance(

                         POINT(canteen_position_longitude,canteen_position_latitude),

                         POINT(1,1)

                     )*111195 AS distance

             FROM canteen) tmp

        ORDER BY tmp.sort asc
        <if test="'score'.equals(sortType)">
            ,tmp.score desc
        </if>
        <if test="'distance'.equals(sortType)">
            ,tmp.distance asc
        </if>
    </select>
</mapper>
